<h1>Billboards</h1>
<% if @billboards.any? %>
  <% @billboards.each do |billboard| %>
    <h2><%= link_to billboard.name, billboard_path(billboard) %></h2>
    <i>
      <%= link_to 'Edit', edit_billboard_path(billboard), class: 'ui button tiny' %>
      <%= link_to 'Delete', billboard_path(billboard),
                            method: :delete,
                            data: { confirm: 'Really Delete?' },
                            class: 'ui button negative tiny' %>
    </i>
  <% end %>
<% else %>
  <h4>No boards yet</h4>
<% end %>

<div class='ui container'>
  <h1> <%= @artist.id ? 'Edit Artist' : 'New Artist' %> </h1>
  <nav>
    <%= link_to 'Back', @artist.id ? artist_path(@artist) : artists_path, class: 'ui button' %>
  </nav>
  <%= form_for @artist, html: { class: 'ui form' } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true %>
    <br/>
    <%= f.submit class: 'ui positive button' %>
  <% end %>
</div>

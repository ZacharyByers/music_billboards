<h1>Artists</h1>
<% if @artists.any? %>
  <% @artists.each do |artist| %>  
    <hr/>
    <h4><%= link_to artist.name, artist_path(artist) %></h4>
    <i>
      <%= link_to 'Edit', edit_artist_path(artist), class: 'btn btn-primary'  %>
      <%= link_to 'Delete', artist_path(artist),
                            method: :delete,
                            data: { confirm: 'Really Delete?' },
                            class: 'btn btn-danger' %>
    </i>
  <% end %>
<% else %>
  <h4>No Artists Yet</h4>
<% end %>
